<div class="container">
  <form>
    <div class="row mt-5">
      <div class="col">
        <label class="h2" for="projectName">
         Manage Project
        </label>
          <span class="h4">/</span>
          <input type="text" readonly class="form-control-inline" id="projectName" value="{{repo.name}}">
        <button type="submit" class="btn btn-primary">Save Changes</button>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <div class="form-group">
          <label for="repositoryName">Repository</label>
          <input type="text" readonly class="form-control" id="repositoryName" value="{{repo.repository.name}}">
        </div>
        <div class="form-group form-check">
          <input class="form-check-input" type="checkbox" readonly value="" id="publish">
          <label class="form-check-label" for="publish">Publish</label>
        </div>
      </div>
      <div class="col-6">
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" readonly id="description" rows="3">{{repo.description}}</textarea>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <h3>Dataflows</h3>
        <hr>
        {{#if repo.dataflowList}}
        <ul class="list-group">
        {{#each repo.dataflowList}}
          <li class="list-group-item active">{{name}}</li>
        {{/each}}
        </ul>
        {{else}}
        <ul class="list-group">
        <li class="list-group-item active">No dataflows defined for this Project</li>
        </ul>
        {{/if}}
      </div>
      <div class="col-3">
        <h3>Pipelines</h3>
        <hr>
        {{#if repo.pipelineList}}
        <ul class="list-group">
        {{#each repo.pipelineList}}
          <li class="list-group-item active">{{name}}</li>
        {{/each}}
        </ul>
        {{else}}
        <ul class="list-group">
        <li class="list-group-item active">No pipelines defined for this Project</li>
        </ul>
        {{/if}}
      </div>
      <div class="col-3">
        <h3>Containers</h3>
        <hr>
        {{#if repo.containerList}}
        <ul class="list-group">
        {{#each repo.containerList}}
          <li class="list-group-item active">{{name}}</li>
        {{/each}}
        </ul>
        {{else}}
        <ul class="list-group">
        <li class="list-group-item active">No containers defined for this Project</li>
        </ul>
        {{/if}}
      </div>
      <div class="col-3">
        <h3>Files</h3>
        <hr>
        {{#if repo.fileList}}
        <ul class="list-group">
        {{#each repo.fileList}}
          <li class="list-group-item active">{{name}}</li>
        {{/each}}
        </ul>
        {{else}}
        <ul class="list-group">
        <li class="list-group-item active">No files added to this Project</li>
        </ul>
        {{/if}}
      </div>
    </div>
  </form>
</div>
